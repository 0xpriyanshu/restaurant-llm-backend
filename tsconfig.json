{
  "compilerOptions": {
    "target": "ES6",                               
    "module": "commonjs",                        
    "rootDir": "./src",                            /* Tell TypeScript where to find the source files */
    "outDir": "./dist",                            /* Tell TypeScript where to output compiled JS files */
    "strict": true,                                /* Enable all strict type checking */
    "esModuleInterop": true,                       /* Allow default imports from modules */
    "forceConsistentCasingInFileNames": true,      /* Ensure file names are case-sensitive */
    "skipLibCheck": true                           /* Skip type checking of declaration files */
  }
}
